<mvc:View
	controllerName="com.kennethsumang.swapp.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<SplitApp
		id="SplitAppDemo"
		initialDetail="detail"
		initialMaster="master">
		<detailPages>
			<Page
				id="detail"
				title="Details"
				backgroundDesign= "Solid"
				busy="{state>/loading}">
				<Label text="{selectedPeople>/name}" visible="{ !!$(selectedPeople>/name) }" />
			</Page>
		</detailPages>
		<masterPages>
			<Page
				id="master"
				title="Star Wars Characters"
				backgroundDesign= "List">
				<List id="charList" items="{peopleList>/results}" growing="true" growingThreshold="100">
					<items>
						<StandardListItem
							title="{peopleList>name}"
							type="Active"
							press=".handleListItemClick($event, ${peopleList>name})" />
					</items>
				</List>
			</Page>
		</masterPages>
	</SplitApp>
</mvc:View>